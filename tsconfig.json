{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"@lib/*": ["lib/*.ts", "lib/*"],
			"@packages/*": ["packages/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
